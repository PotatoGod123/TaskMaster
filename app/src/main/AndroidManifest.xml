<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.potatogod123.taskmaster">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskMaster">
        <activity android:name=".activities.Login"></activity>
        <activity android:name=".activities.SignUpConfirmation" />
        <activity android:name=".activities.SignUp" />
        <activity android:name=".recyclers.RecyclerViewPractice" />
        <activity android:name=".activities.Settings" />
        <activity android:name=".activities.TaskDetail" />
        <activity android:name=".activities.AllTask" />
        <activity android:name=".activities.AddTask" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>